# Full stack environment configuration
# Copy to .env.full and fill in values

# Actual Budget server password (set when creating budget)
ACTUAL_SERVER_PASSWORD=your-actual-server-password

# API key for actual-http-api and bank-sms-api authentication
# Generate with: openssl rand -hex 32
ACTUAL_API_KEY=your-api-key

# Budget and account IDs from Actual Budget
# Find via actual-http-api at http://localhost:5007/api-docs/
DEFAULT_BUDGET_SYNC_ID=your-budget-sync-id
DEFAULT_ACCOUNT_ID=your-account-id

# Optional: API key to protect the SMS endpoint
SMS_API_KEY=

# Set to true to test without importing to Actual Budget
DISABLE_ACTUAL_BUDGET=false
