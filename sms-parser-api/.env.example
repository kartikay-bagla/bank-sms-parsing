# Container-friendly configuration for deployment
# Copy this file to .env and fill in your values

# LM Studio endpoint for FunctionGemma inference
# Use host.containers.internal (Podman) or host.docker.internal (Docker) to reach host
LM_STUDIO_URL=http://host.containers.internal:1234/v1/completions

# Actual Budget HTTP API configuration
# See: https://actualbudget.org/docs/api/
ACTUAL_API_URL=http://host.containers.internal:5007
ACTUAL_API_KEY=your-actual-http-api-key

# Default budget and account IDs from Actual Budget
# Find these in your Actual Budget settings or via the API
DEFAULT_BUDGET_SYNC_ID=your-budget-sync-id
DEFAULT_ACCOUNT_ID=your-account-id

# Optional: API key to protect this SMS endpoint
# Leave empty or remove if not needed
SMS_API_KEY=

# Testing mode: set to true to disable Actual Budget import
# When enabled, /process-sms returns parsed data without importing
DISABLE_ACTUAL_BUDGET=false

# Note: DATABASE_URL is set via docker-compose.yml environment
# Default: sqlite:///./data/requests.db (persisted via volume)
